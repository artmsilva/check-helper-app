{
  "name": "interactive-check-helper",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Free interactive check writing tool with real-time amount-to-words conversion. Click and edit directly on a realistic check preview. Built with vanilla JavaScript and native ES modules - no build tools required!",
  "repository": {
    "type": "git",
    "url": "https://github.com/artmsilva/check-helper-app.git"
  },
  "bugs": {
    "url": "https://github.com/artmsilva/check-helper-app/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "browserslist": [
    "defaults",
    "supports es6-module",
    "supports import-maps"
  ],
  "scripts": {
    "lint:css": "node tools/css-linter/css-tool.cjs --enhanced",
    "lint:css-basic": "node tools/css-linter/css-tool.cjs --basic",
    "fix:css": "node tools/css-linter/css-tool.cjs --fix",
    "fix:css-preview": "node tools/css-linter/css-tool.cjs --fix --dry-run",
    "serve": "python3 -m http.server 3000",
    "dev": "npm run serve"
  }
}
